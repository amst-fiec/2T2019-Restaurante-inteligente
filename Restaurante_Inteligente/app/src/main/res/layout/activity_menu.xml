<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color"
    tools:context=".Menu">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="236dp"
        android:layout_height="221dp"
        android:layout_marginTop="44dp"
        android:contentDescription="@string/logos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mesa" />

    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="203dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.283">

        <Button
            android:id="@+id/btnMesas"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verMesas"
            android:text="@string/btnMesas"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnEstado"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="estadoRestaurante"
            android:text="@string/EstadoMesas"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnBateria"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verBateria"
            android:text="@string/btnBateria"
            android:textSize="24sp"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>